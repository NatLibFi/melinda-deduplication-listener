{
  "name": "@natlibfi/melinda-change-information-listener",
  "description": "Melinda change information listener",
  "author": {
    "name": "The National Library of Finland"
  },
  "keywords": [],
  "homepage": "https://github.com/natlibfi/melinda-change-information-listener",
  "bugs": {
    "url": "https://github.com/natlibfi/melinda-change-information-listener/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/melinda-change-information-listener.git"
  },
  "license": "Apache-2.0",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=7"
  },
  "scripts": {
    "prepublishOnly": "npm run build:transpile",
    "check-deps": "npm-check;exit 0",
    "lint": "eslint --fix src",
    "flow": "flow",
    "test": "npm run lint && npm run flow",
    "clean": "rimraf build coverage .nyc_output dist",
    "copy:tnsnames:template": "cp tnsnames.ora.template dist",
    "build:transpile": "babel src --source-maps --out-dir=dist --minified",
    "build": "npm run build:transpile && npm run copy:tnsnames:template && npm run check-deps",
    "dev": "npm run clean && npm run build:transpile",
    "dev:check": "npm run clean && npm test;npm run dev",
    "dev:watch": "chokidar src -c 'npm run build:transpile && node dist/index.js'",
    "check-and-build": "npm test && npm run build",
    "travisci": "npm run check-and-build",
    "publish-to-npm": "npm install && npm test && npm publish --access=public"
  },
  "dependencies": {
    "@natlibfi/aleph-change-listener": "git+https://github.com/NatLibFi/aleph-change-listener.git",
    "@natlibfi/melinda-deduplication-common": "git+https://github.com/natlibfi/melinda-deduplication-common.git#fix-build-and-checks",
    "amqplib": "0.x.x",
    "body-parser": "^1.17.2",
    "debug": "^2.6.8",
    "es6-promisify": "^5.0.0",
    "express": "^4.15.3",
    "http-status-codes": "^1.1.6",
    "lodash": "^4.17.4",
    "marc-record-js": "git+https://github.com/natlibfi-arlehiko/marc-record-js.git",
    "oracledb": "^1.13.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "debug": "^3.1.0",
    "eslint": "^5.2.0",
    "eslint-config-xo": "0.x.x",
    "eslint-plugin-flowtype": "^2.34.0",
    "flow-bin": "0.x.x",
    "npm-check": "^5.7.1",
    "rimraf": "^2.6.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "extends": "xo",
    "rules": {
      "prefer-arrow-callback": [
        "error"
      ]
    }
  },
  "babel": {
    "presets": [
      "flow",
      [
        "env",
        {
          "targets": {
            "node": "7"
          }
        }
      ]
    ]
  }
}
